{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "typecheck",
            "type": "shell",
            "command": "stack build --ghc-options=-fno-code"
        },
        {
            "label": "fast",
            "type": "shell",
            "command": "stack build --fast"
        },
        {
            "label": "release",
            "type": "shell",
            "command": "stack build --ghc-options=-O2"
        },
    ]
}